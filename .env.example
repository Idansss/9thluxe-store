# Database (Neon, Supabase, or any Postgres)
DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/DB?pgbouncer=true&connection_limit=1"

# NextAuth
NEXTAUTH_SECRET="your-nextauth-secret-here"
NEXTAUTH_URL="http://localhost:3000"

# Paystack (Nigeria)
PAYSTACK_SECRET_KEY="your-paystack-secret-key-here"
PAYSTACK_PUBLIC_KEY="your-paystack-public-key-here"

# Resend (for emails). Verify your domain in Resend dashboard, then set:
# NEWSLETTER_FROM_EMAIL="Fàdè <newsletter@yourdomain.com>" so newsletters reach all subscribers.
RESEND_API_KEY="your-resend-api-key-here"

# AI search (optional – expands queries for better results)
# Anthropic (Claude) is tried first, then xAI (Grok) if keys are set.
ANTHROPIC_API_KEY=""
XAI_API_KEY=""
# XAI_SEARCH_MODEL="grok-2"   # optional override

# App
APP_URL="http://localhost:3000"
